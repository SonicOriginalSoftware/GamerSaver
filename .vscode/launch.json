{
    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "type": "cppdbg",
            "program": "${workspaceRoot}/build/src/GamerSaver",
            "cwd": "${workspaceRoot}/build/src/",
            "name": "Debug GamerSaver",
            "preLaunchTask": "Build Debug (Ninja)",
            "logging": {"moduleLoad": false},
            "windows": {
                "program": "${workspaceFolder}\\build\\src\\GamerSaver.exe",
                "type": "cppvsdbg",
            },
            "linux": {
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
        },
    ]
}
